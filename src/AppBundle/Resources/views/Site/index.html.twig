{% extends '::base.html.twig' %}
{% block title %}List All Sites{% endblock %}
{% block body -%}
    <a href="{{ path('sites_new') }}">Add a new Site</a>
    <h1>Listing all Sites</h1>
    <div class="table-responsive">
        <table class="table table-striped table-hover table-responsive list-all">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td><a href="{{ path('sites_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                        <td>{{ entity.description }}</td>
                        <td>
                            <a href="{{ path('sites_edit', { 'id': entity.id }) }}">edit</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block styles %}
    /*Responsive table hack recommended by bootstrap*/
    @-moz-document url-prefix() {
      fieldset { display: table-cell; }
    }
{% endblock %}