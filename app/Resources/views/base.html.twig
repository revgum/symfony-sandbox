<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script src="{{ asset('js/vendor/jquery-1.11.13.js') }}"></script>
        <script src="{{ asset('js/vendor/bootstrap.js') }}"></script>
        <link rel="stylesheet" href="{{ asset('css/vendor/bootstrap.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/vendor/bootstrap-theme.css') }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    </head>
    <body>

        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="{{ app.request.attributes.get('_template').get('controller') == 'Default' ? 'active' }}">
                            <a href="{{ path('browse') }}">Browse All Sites</a>
                        </li>

                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li class="{{ app.request.attributes.get('_template').get('controller') == 'Site' ? 'active'}}">
                                    <a href="{{ path('sites') }}">Sites</a>
                                </li>
                                <li class="{{ app.request.attributes.get('_template').get('controller') == 'Property' ? 'active'}}">
                                    <a href="{{ path('properties') }}">Properties</a>
                                </li>
                            </ul>
                        </li>
                    </ul>                    
                </div><!-- /.navbar-collapse -->    
            </div><!-- /.container-fluid -->
        </nav>


        <div class='container-fluid'>
            <div class='row'>
                <div class='col-xs-12'>
                    {% if app.session.flashbag.peekAll()|length %}
                        {% include '::_flash.html.twig' %}
                    {% endif %} 
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        {% block javascripts %}{% endblock %}
        <style type="text/css">
            body { padding-top: 70px; }
            table.table.list-all { margin-top: 20px; } 
            div.alert { font-weight: bold; }

            {% block styles %}{% endblock %}
        </style>
    </body>
</html>
